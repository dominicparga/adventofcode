{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "[adventofcode] build",
            "type": "shell",
            "command": "${workspaceFolder}/scripts/build.sh",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": false,
            },
            "problemMatcher": []
        },
        {
            "label": "[adventofcode] run",
            "type": "shell",
            "command": "${workspaceFolder}/bin/adventofcode ${input:runargs}",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": false,
                "clear": false,
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "runargs",
            "description": "Arguments",
            "default": "2022 tuning-trouble -pattern-length 4 -stream-file res/december2022/day06.messageStream.txt",
            "type": "promptString"
        }
    ]
}